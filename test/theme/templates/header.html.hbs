<header>
  <div class="container-fluid">
    <div class="row">
      <div class="col-10">
        <a class="brand brand-print" href="{{> base-url}}">
          <span class="fa fa-layer-group"></span> {{collections.properties.project.title}}
        </a>
        <a class="brand brand-normal" href="{{> base-url}}">
          <span class="fa fa-layer-group"></span> {{collections.properties.project.title}}
        </a>
      </div>
      <div class="col-2 text-right">
        <a class="btn navbar-button collapsed"
           data-bs-toggle="collapse"
           data-bs-target="#navbar-content"
           aria-controls="navbar-content"
           aria-expanded="false"
        ><span class="icon"></span></a>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <nav id="nav-default" class="navbar navbar-expand-lg navbar-dark">
          <div class="collapse navbar-collapse" id="navbar-content">
            <ul class="navbar-nav me-auto">
              {{#each collections.navbar.links}}
              {{#with (object a=(normalize-path path) b=(normalize-path @root.attributes.docfile)) as | path |}}
              <li class="nav-item">
                <a class="{{#if (equals path.a path.b )~}} active {{~/if}}" href="{{> nav-ref path=path.a}}">
                  {{../name}}
                </a>
              </li>
              {{/with}}
              {{/each}}
            </ul>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a href="https://github.com/brettaufheber/asciidoc-with-gh-pages-action">
                  <span class="fab fa-github"></span> Project Repository
                </a>
              </li>
              <li class="nav-item">
                <a href="https://docs.asciidoctor.org/asciidoc/latest/syntax-quick-reference">
                  <span class="fa fa-question"></span> AsciiDoc Syntax
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
    </div>
  </div>
</header>
